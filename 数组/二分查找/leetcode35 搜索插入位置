class Solution(object):
    def searchInsert(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: int
        """
        #采用二分查找，需要注意的是判断一下最终的mid和target的大小
        left = 0
        right = len(nums) - 1
        while left <= right:
            mid = int((left+right)/2)
            if nums[mid] < target:
                left = mid + 1
            elif nums[mid] > target:
                right = mid - 1
            else:
                return mid
        #进行判断插入
        """
        四种情况:
        target在所有数组元素之前 [0, -1]
        target在数组中查找到  mid就是要插入的位置
        target要插入到数组中的位置  right+1
        target要插入到所有元素之后  right+1
        """
        """
        if nums[mid] < target:
            return mid+1
        else:
            return mid
        """
        return right+1
nums = [1,3,5,6]
target = 7
s= Solution()
print(s.searchInsert(nums,target))
